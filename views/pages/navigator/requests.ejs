<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connection Requests - Navigator Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Navigator Theme CSS -->
    <link href="/css/navigator-theme.css" rel="stylesheet" />
    <style>
      .dashboard-header {
        background: var(--primary-blue);
        color: white;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1030;
        height: 60px;
      }

      .sidebar {
        background: #f8f9fa;
        position: fixed;
        left: 0;
        top: 60px;
        bottom: 0;
        width: 250px;
        border-right: 1px solid #dee2e6;
        overflow-y: auto;
        z-index: 1020;
        padding: 20px 0;
      }

      .main-content {
        margin-left: 250px;
        margin-top: 60px;
        padding: 30px;
        min-height: calc(100vh - 60px);
      }

      .nav-link {
        color: #333;
        padding: 0.8rem 1.5rem;
        margin: 0.2rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }

      .nav-link:hover {
        background: var(--accent-teal);
        color: white !important;
      }

      .nav-link.active {
        background: var(--primary-blue);
        color: white !important;
      }

      .section-header {
        border-bottom: 2px solid var(--primary-blue);
        padding-bottom: 10px;
        margin-bottom: 20px;
      }

      .request-card {
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
        transition: transform 0.2s;
      }

      .request-card:hover {
        transform: translateY(-2px);
      }

      .request-card .card-header {
        background-color: var(--primary-blue);
        color: white;
        padding: 15px;
      }

      .request-message {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        font-style: italic;
        color: #6c757d;
        margin: 10px 0;
      }

      .action-buttons .btn {
        min-width: 100px;
      }

      .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #6c757d;
      }

      .empty-state img {
        width: 100px;
        margin-bottom: 20px;
      }

      .request-actions {
        display: flex;
        gap: 10px;
      }
    </style>
  </head>
  <body>
    <!-- Fixed Header -->
    <header class="dashboard-header py-2">
      <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center logo">
            <i class="fas fa-hospital"></i>
            <h4 class="mb-0">MedConnect</h4>
          </div>
          <div class="d-flex align-items-center">
            <span class="me-3 user-welcome"
              ><i class="fas fa-user-circle me-2"></i>Welcome, <%= user.fullName
              %></span
            >
            <a href="/logout" class="btn btn-logout">Logout</a>
          </div>
        </div>
      </div>
    </header>

    <!-- Fixed Sidebar -->
    <div class="sidebar">
      <nav class="nav flex-column">
        <a
          href="/navigator/dashboard"
          class="nav-link <%= locals.path === '/navigator/dashboard' ? 'active' : '' %>"
        >
          <i class="fas fa-home"></i> Dashboard
        </a>
        <a
          href="/navigator/patients"
          class="nav-link <%= locals.path === '/navigator/patients' ? 'active' : '' %>"
        >
          <i class="fas fa-users"></i> My Patients
        </a>
        <a
          href="/navigator/requests"
          class="nav-link <%= locals.path === '/navigator/requests' ? 'active' : '' %>"
        >
          <i class="fas fa-user-plus"></i> Connection Requests
        </a>
        <a
          href="/navigator/messages"
          class="nav-link <%= locals.path === '/navigator/messages' ? 'active' : '' %>"
        >
          <i class="fas fa-comments"></i> Messages
        </a>
        <a
          href="/navigator/profile"
          class="nav-link <%= locals.path === '/navigator/profile' ? 'active' : '' %>"
        >
          <i class="fas fa-id-card"></i> My Profile
        </a>
      </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container-fluid">
        <div class="row mb-4">
          <div class="col-12">
            <h4 class="section-header">
              <i class="fas fa-user-plus me-2"></i> Connection Requests
            </h4>

            <div id="loadingRequests" class="text-center p-4">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading requests...</span>
              </div>
            </div>

            <div id="noRequests" class="empty-state" style="display: none">
              <i class="fas fa-inbox fa-3x mb-3"></i>
              <h6>No Pending Requests</h6>
              <p class="text-muted small">
                You'll see connection requests from patients here.
              </p>
            </div>

            <div id="requestsContainer" class="row g-4"></div>
          </div>
        </div>
      </div>
    </main>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        loadRequests();
      });

      function loadRequests() {
        fetch("/api/navigator/connection-requests")
          .then((response) => response.json())
          .then((data) => {
            const loadingEl = document.getElementById("loadingRequests");
            const noRequestsEl = document.getElementById("noRequests");
            const containerEl = document.getElementById("requestsContainer");

            loadingEl.style.display = "none";

            if (!data.success || !data.requests.length) {
              noRequestsEl.style.display = "block";
              return;
            }

            containerEl.innerHTML = data.requests
              .map(
                (request) => `
              <div class="col-md-6 col-lg-4">
                <div class="card request-card h-100" id="request-${
                  request._id
                }">
                  <div class="card-body">
                    <h6 class="card-title">${request.patient.fullName}</h6>
                    <p class="card-text text-muted small mb-2">${
                      request.patient.email
                    }</p>
                    <p class="request-message">"${request.message}"</p>
                    <div class="request-actions">
                      <button 
                        class="btn btn-success btn-sm" 
                        onclick="handleRequest('${request._id}', 'accepted')"
                      >
                        <i class="fas fa-check me-1"></i> Accept
                      </button>
                      <button 
                        class="btn btn-danger btn-sm"
                        onclick="handleRequest('${request._id}', 'rejected')"
                      >
                        <i class="fas fa-times me-1"></i> Decline
                      </button>
                    </div>
                  </div>
                  <div class="card-footer text-muted small">
                    Received ${new Date(request.createdAt).toLocaleDateString()}
                  </div>
                </div>
              </div>
            `
              )
              .join("");
          })
          .catch((error) => {
            console.error("Error loading requests:", error);
            loadingEl.style.display = "none";
            noRequestsEl.style.display = "block";
          });
      }

      window.handleRequest = function (requestId, status) {
        const requestCard = document.getElementById(`request-${requestId}`);
        const buttons = requestCard.querySelectorAll("button");

        // Disable buttons while processing
        buttons.forEach((btn) => (btn.disabled = true));

        fetch(`/api/navigator/connection-requests/${requestId}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ status }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              // Show success message and remove card with animation
              requestCard.style.transition = "all 0.3s";
              requestCard.style.opacity = "0";
              requestCard.style.transform = "scale(0.8)";

              setTimeout(() => {
                requestCard.parentElement.remove();

                // Check if there are any remaining requests
                if (
                  !document.getElementById("requestsContainer").children.length
                ) {
                  document.getElementById("noRequests").style.display = "block";
                }
              }, 300);
            } else {
              throw new Error(data.message || "Failed to update request");
            }
          })
          .catch((error) => {
            console.error("Error handling request:", error);
            alert("Failed to process the request. Please try again.");
            buttons.forEach((btn) => (btn.disabled = false));
          });
      };
    </script>
  </body>
</html>
